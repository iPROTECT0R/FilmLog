@model FilmLog.Models.Film

@{
    ViewData["Title"] = "Edit Film";
}

<h2>Edit Film</h2>

<h4>Film</h4>
<hr />

<!-- Form to edit the details of an existing film -->
<form asp-action="Edit" method="post">
    
    <!-- Title input field for editing the film's title -->
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <!-- Display validation error message for Title if there is one -->
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Description input field for editing the film's description -->
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <!-- Display validation error message for Description if there is one -->
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Director input field for editing the film's director -->
    <div class="form-group">
        <label asp-for="Director" class="control-label"></label>
        <input asp-for="Director" class="form-control" />
        <!-- Display validation error message for Director if there is one -->
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <!-- Release date input field for editing the film's release date -->
    <div class="form-group">
        <label asp-for="ReleaseDate" class="control-label"></label>
        <input asp-for="ReleaseDate" type="date" class="form-control" />
        <!-- Display validation error message for ReleaseDate if there is one -->
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </div>

    <!-- Buttons to either save the changes or cancel -->
    <div class="form-group">
        <!-- Save button to submit the form and update the film -->
        <button type="submit" class="btn btn-primary">Save</button>

        <!-- Cancel button to go back to the list of films without saving -->
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<!-- Include validation scripts for client-side validation -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
